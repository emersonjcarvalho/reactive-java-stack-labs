# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET         /s3/:cpf                controllers.Application.s3(cpf: String)

################################    UPLOAD   ################################

POST        /upload/foto/:cpf       controllers.UploadAsyncController.fotoFileUpload(cpf: String)
OPTIONS     /upload/foto      	    controllers.UploadAsyncController.option()
OPTIONS     /upload/foto/:id  		controllers.UploadAsyncController.optionID(id: Long)

POST        /upload/documento/:cpf  controllers.UploadAsyncController.documentoFileUpload(cpf: String)
OPTIONS     /upload/documento      	controllers.UploadAsyncController.option()
OPTIONS     /upload/documento/:id  	controllers.UploadAsyncController.optionID(id: Long)

###########
GET         /cache/:key             controllers.Application.getCache(key: String)
GET         /cache/apaga/:key       controllers.Application.apagaCache(key: String)
POST        /upload/:cpf            controllers.Application.uploadFoto(cpf: String)
OPTIONS     /upload      	        controllers.Application.option()
OPTIONS     /upload/:id  			controllers.Application.optionID(id: Long)
###################################################################################


### TESTS Send-Mail (SES)
GET         /ses/:to                @controllers.Application.ses(to: String)

### TESTS SPRING-DATA-JPA
GET     /hello                      @controllers.UserController.hello

GET     /users                      @controllers.UserController.getAllUsers
GET     /users/:id                  @controllers.UserController.getUserById(id: Long)
POST    /users                      @controllers.UserController.saveUser
PUT     /users/:id                  @controllers.UserController.updateUser(id: Long)

GET     /solicitacoes               @controllers.UserController.solicitacoes
GET     /estudantes                 @controllers.UserController.estudantes


OPTIONS     /users      	        controllers.UserController.option()


############    SOLICITACAO CONTROLLER      ############
GET         /campus                     @controllers.SolicitacaoController.campusList
GET         /estados                    @controllers.SolicitacaoController.estadoList
POST        /solicitacao                @controllers.SolicitacaoController.saveSolicitacao

OPTIONS     /solicitacao      	        controllers.SolicitacaoController.option()

GET     /pagseguro                  controllers.SolicitacaoController.goPagSeguro()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
